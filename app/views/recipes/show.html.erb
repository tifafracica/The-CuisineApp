<%= render '/navbar' %>
<div class="container">
  <div class="mt-4">
    <%= link_to "Back", recipes_path %>
  </div>


  <div class="mt-5">
    <% @results.each do |item| %>
      <h1><%= item[:title] %></h1>
      <div class="d-flex justify-content-between mt-3">
        <div class="image-div">
          <%= image_tag(item[:image], :alt => item[:title], :class => "card-img-top") %>
        </div>
        <div class="">
          <div class="card text-white bg-success mb-3" style="max-width: 18rem;">
            <div class="card-header">Ingredients</div>
            <div class="card-body">
              <ul>
                <% item[:ingredients].each do |ingredient| %>
                  <li> <%= ingredient %> </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
      <div class="mt-5 mb-5">
       <p> <%= item[:steps] %> </p>
      </div>
    <% end %>
  </div>
</div>
